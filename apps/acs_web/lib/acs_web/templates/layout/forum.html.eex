<% user = @conn.private[:acs_session_user] %>
<!DOCTYPE html>
<html lang="zh-cmn-Hans">
  <head>
    <meta charset="utf-8"/>
    <title> <%= gettext("Firevale Forum") %> </title>
    <meta name="viewport" content="width=device-width,initial-scale=1, minimum-scale=1, maximum-scale=1, user-scalable=no"/>
    <meta name="apple-mobile-web-app-capable" content="yes"/>
    <meta name="full-screen" content="true"/>
    <meta name="screen-orientation" content="portrait"/>
    <meta name="x5-fullscreen" content="true"/>
    <meta name="360-fullscreen" content="true"/>
    <%= if @conn.private[:is_mobile] do %>
      <link href="<%= static_url(@conn, "/css/forum_mobile_commons.css") %>" rel="stylesheet"/>
      <link href="<%= static_url(@conn, "/css/forum_mobile.css") %>" rel="stylesheet"/>
    <% else %>
      <link href="<%= static_url(@conn, "/css/forum_commons.css") %>" rel="stylesheet"/>
      <link href="<%= static_url(@conn, "/css/forum.css") %>" rel="stylesheet"/>
    <% end %>
  </head>
  <body class="<%= @conn.private[:acs_body_class] %>">
    <div id="app">
      <router-view></router-view>
    </div>
    <script>
      window.acsConfig = {
        csrfToken: '<%= get_csrf_token() %>',
        inApp: <%= @conn.private[:acs_browser] == "webview" || @conn.private[:acs_platform] == "wp8" %>,
        platform: '<%= @conn.private[:acs_platform] %>',
        browser: '<%= @conn.private[:acs_browser] %>',
        locale: '<%= @conn.private[:acs_locale] %>',
        appId: '<%= @conn.private[:acs_app_id] %>',
        deviceId: '<%= @conn.private[:acs_device_id] %>',
        accessToken: '<%= @conn.private[:acs_access_token] %>',
        <%= if !is_nil(user) do %>
        user: {
          id: <%= user.id %>,
          nickname: '<%= user.nickname %>',
          inserted_at: '<%= user.inserted_at %>',
          email: '<%= user.email %>',
          mobile: '<%= user.mobile %>',
          gender: '<%= user.gender %>',
          resident_id: '<%= user.resident_id %>',
          resident_name: '<%= user.resident_name %>',
          avatar_url: '<%= user.avatar_url %>',
          nil_password: <%= is_nil(user.encrypted_password) %>,
        },
        <% end %>
        show_logout: <%= @conn.params["can_log_out"] == "1" %>,
        imagesUrl: '<%= "#{@cdn_scheme}://#{@cdn_domain}/acs/" %>',
        defaultAvatarUrl: '<%= static_url(@conn, "/images/themes/jqxs_mobile/19_03-2_03.png") %>',
        isMobileAccountSupported: <%= @is_mobile_account_supported %>,
        <%= render @view_module, @view_template, assigns %>
      }
    </script>
    <%= if @conn.private[:is_mobile] do %>
      <script src="<%= static_url(@conn, "/js/forum_mobile_commons.js") %>"></script>
      <script src="<%= static_url(@conn, "/js/forum_mobile.js") %>"></script>
    <% else %>
      <script src="<%= static_url(@conn, "/js/forum_commons.js") %>"></script>
      <script src="<%= static_url(@conn, "/js/forum.js") %>"></script>
    <% end %>
  </body>
</html>

