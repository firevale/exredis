<% user = Acs.Wcs.get_wcs_user(@wcs_user_id) %>
<% point = Acs.PMalls.get_user_point(@app_id, @wcs_user_id) %>
<% goodses = Acs.PMalls.list_pmall_goods(@app_id) %>
<% tasks = Acs.PMalls.list_pmall_tasks(@app_id) %>

<!DOCTYPE html>
<html lang="zh-cmn-Hans">
  <head>
    <meta charset="utf-8"/>
    <title> <%= gettext("我的积分") %> </title>
    <meta name="viewport" content="width=device-width,initial-scale=1, minimum-scale=1, maximum-scale=1, user-scalable=no"/>
    <meta name="apple-mobile-web-app-capable" content="yes"/>
    <meta name="full-screen" content="true"/>
    <meta name="screen-orientation" content="portrait"/>
    <meta name="x5-fullscreen" content="true"/>
    <meta name="360-fullscreen" content="true"/>
    <link href="<%= static_url(@conn, "/css/pmall_commons.css") %>" rel="stylesheet"/>
    <link href="<%= static_url(@conn, "/css/pmall.css") %>" rel="stylesheet"/>
  </head>
  <body class="<%= @conn.private[:acs_body_class] %>">
    <div id="app">
      <router-view></router-view>
    </div>
    <script>
      window.acsConfig = {
        csrfToken: '<%= get_csrf_token() %>',
        platform: '<%= @conn.private[:acs_platform] %>',
        browser: '<%= @conn.private[:acs_browser] %>',
        locale: '<%= @conn.private[:acs_locale] %>',
        appId: '<%= @app_id %>',
        <%= if !is_nil(user) do %>
        user: {
          id: <%= user.id %>,
          nickname: '<%= user.nickname %>',
          avatar_url: '<%= user.avatar_url %>',
          user_id: '<%= user.user_id %>',
          points: <%= point %>,
        },
        <% end %>
        goodses: <%= raw Poison.encode!(goodses) %>,
        tasks: <%= raw Poison.encode!(tasks) %>,
        imagesUrl: '<%= "#{@cdn_scheme}://#{@cdn_domain}/acs/" %>',
      }
    </script>
    <script src="<%= static_url(@conn, "/js/pmall_commons.js") %>"></script>
    <script src="<%= static_url(@conn, "/js/pmall.js") %>"></script>
  </body>
</html>

